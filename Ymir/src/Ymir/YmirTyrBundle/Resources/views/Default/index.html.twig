{% extends "TyrBundle::layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
	{% stylesheets filter="cssrewrite" output="css/ymir.css" 
		"@TyrBundle/Resources/public/css/header.css"
		"@TyrBundle/Resources/public/css/accueil.css"
		"@TyrBundle/Resources/public/css/profil.css"
		"@TyrBundle/Resources/public/css/creative.css"
		"@TyrBundle/Resources/public/css/stage.css"
		"@TyrBundle/Resources/public/css/footer.css" %}
		<link rel="stylesheet" href="{{ asset_url }}"/>
	{% endstylesheets %}
	<script id="profil">
		{{ include("TyrBundle:Profil:index.html.twig") }}
	</script>
	<script id="creative">
		{{ include("TyrBundle:Creative:index.html.twig") }}
	</script>
{% endblock %}

{% block body %}
<header>
	{{ include("TyrBundle:Default:header.html.twig") }}
</header>
<section>
	<article>
		{{ include("TyrBundle:Form:login_register.html.twig") }}
	</article>
	<article>
		{{ include("TyrBundle:Default:tryit.html.twig") }}
	</article>
</section>
<section>
		{{ include("TyrBundle:Default:presentation.html.twig") }}
</section>
<footer>
		{{ include("TyrBundle:Default:footer.html.twig") }}
</footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts  output='js/ymir.js' 
		"@TyrBundle/Resources/public/js/src/Ymir.class.js"
		      "@TyrBundle/Resources/public/js/src/View/ViewProfil.class.js"
		"@TyrBundle/Resources/public/js/src//Model/Widget.class.js"
		%}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}