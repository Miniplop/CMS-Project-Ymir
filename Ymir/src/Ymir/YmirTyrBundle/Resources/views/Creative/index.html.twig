{% extends "TyrBundle::layout.html.twig" %}

{% block body %}
<section class="creative-page">
       
        <section class="full-height">
	        <div class="small-3 medium-2 large-2 columns full-height no-padding toolbar">
	            {{ include("TyrBundle:Creative:toolsbar.html.twig") }}
	        </div>
	        <div class="small-9 medium-10 large-10 columns end no-padding full-height">
	            {{ include("TyrBundle:Creative:globaltoolsbar.html.twig") }}   
	            {{ include("TyrBundle:Creative:stage.html.twig") }}  
	        </div>
        </section>
</section>

<div id="mockup-mobile" class="mobile device-draggable">
	<div class="device-mockup lumia920">
		<div class="device">
			<div class="screen">
				<iframe id="mobile" width="64.0625em" ></iframe>
			</div>
		</div>
	</div>
</div>
<div id="mockup-tablet" class="mobile device-draggable">
	<div class="device-mockup galaxy_tab4 landscape black">
		<div class="device">
			<div class="screen">
				<iframe id="tablet" width="64.0625em"><p></p></iframe>
			</div>
		</div>
	</div>
</div>

<div id="container-modal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
	<form>
        <h1>Container parameters</h1>

        <label>Name <input name="name" id="name" type="text"></label>

		<label>Row <input name="isRow" id="isRow" type="checkbox"></label>

        <label>Choose a number of columns
			<select name="nbColumns" id="nbColumns"><option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option><option>11</option><option>12</option>
			</select>
		</label>

        <h2>columns sizing: </h2>
        <div class = "row">
            <h3 class="large-4 columns">large</h3>
            <h3 class="large-4 columns">medium</h3>
            <h3 class="large-4 columns">small</h3>
        </div>
        <div class="row">
			<select data-column-index="1" name="columnsSize_1" class="columnsSize-Large large-4 columns"><option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option><option>11</option><option>12</option>
			</select>
            
            <select data-column-index="1" name="columnsSize_1" class="columnsSize-Medium large-4 columns"><option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option><option>11</option><option>12</option>
			</select>
            
            <select data-column-index="1" name="columnsSize_1" class="columnsSize-Small large-4 columns" ><option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option><option>11</option><option>12</option>
			</select>
		</div>
		<a class="close-reveal-modal" aria-label="Cancel">&#215;</a>
		<button class="button" id="container-parameters-add">Add</button>
    </form>
</div>


<script type="text/template" id="property-template">
    <div class="row toolbar-parameter-edition not-disable-selection">
        <div>
            <label for="" class="left inline not-disable-selection"><%= name %> : </label>
            <input class="not-disable-selection toolbar-parameter-input-<%= type %>" type="<%= inputType %>" placeholder="<%= value %> ">
        </div>
    </div>
</script>


<script type="text/template" id="categorie-template">
		<a href="#categorie_<%= id %>"><%= name %>
			<i class="fi-arrow-down "></i>
		</a>
		<div id="categorie_<%= id %>" class="content">
			<ul class="dropdown">
			<% metaWidgets.each(function(metaWidget) { %>
				<li class="show-meta-widget-preview draggable" data-meta-widget-id="<%= metaWidget.get('id') %>" data-categorie-id="<%= id %>">
					<a href="#<%= metaWidget.get('id') %>"><%= metaWidget.get('name') %></a>
					<div class="meta-widget-preview" disabled="true"><%= metaWidget.get('htmlPreview') %></div>
				</li>
			<% }); %>
			</ul>
		</div>
</script>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}

    <script>
        window.onload = function() {
            app.Urls.css.foundation = "{{ asset('bundles/tyr/vendor/foundation/css/foundation.min.css') }}";
            app.Urls.js.foundation = "{{ asset('bundles/tyr/vendor/foundation/js/foundation.min.js') }}";
            app.Urls.page = "{{ path('stage') }}";
            app.Urls.categories = "{{ path('widgets') }}";
            app.init(true);
        }
    </script>
{% endblock javascripts%}


