{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<ul class="right">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />
        
        <ul class="left">
            <li class="has-form">
                <!--<label>{{ 'security.login.username'|trans }}</label>-->
                <input type="text" placeholder="Username" id="username" name="_username" required="required" />
                
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </li>
            <li class="has-form">
                <!--<span class="input-group-addon" id="basic-addon1">{{ 'security.login.password'|trans }}</span>-->
                <input type="password" class="form-control" placeholder="Password" aria-describedby="basic-addon1" id="password" name="_password" required="required" />
            </li>
            <li class="has-form">
                <input type="submit" class="button radius" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </li>
        </ul>
    </form>
</ul>
{% endblock fos_user_content %}
